<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ChiTietGiaoDich2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgCloud_done"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/donec"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao dịch thành công"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            Tên phim-->
            <TextView
                android:id="@+id/tvTenPhim"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Tên phim: "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg" />
            <!-- Ngày giờ chiếu -->
            <TextView
                android:id="@+id/tvSuatChieu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Suất chiếu: "
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="8dp"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg"/>

            <!-- Tên rạp -->
            <TextView
                android:id="@+id/tvTenRap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Tên rạp: Lotte Tây Hồ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg"/>

            <!-- Số ghế -->
            <TextView
                android:id="@+id/tvSoGhe"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Số ghế: "
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg" />

            <!-- Phương thức thanh toán -->
            <TextView
                android:id="@+id/tvPTThanhToan"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="PT thanh toán: Thanh toán bằng momo"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg"/>

            <!-- Số tiền -->
            <TextView
                android:id="@+id/tvSoTien"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Số Tiền: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_margin="16dp"
                android:background="@drawable/search_view_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <Button
                android:id="@+id/btnTrangChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/home"
                android:layout_marginLeft="30dp"
                android:text="Trang chủ" />
            <Button
                android:id="@+id/btnGuiEmail"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/email"
                android:text="Gửi Email" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>