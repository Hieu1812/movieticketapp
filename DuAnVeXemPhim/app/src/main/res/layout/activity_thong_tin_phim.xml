<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ThongTinPhim">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="bottom|end">
            <!-- nút quay trở lại-->
            <Button
                android:id="@+id/btnThoat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:drawableTop="@drawable/back"
                android:gravity="center"
                android:backgroundTint="#d5dedb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/tvThongTinPhim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin phim"
                    android:textSize="23dp"
                    android:padding="3dp"
                    android:layout_marginLeft="7dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d5dedb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imgCam"
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:src="@drawable/cam" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTenPhim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phim:"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvTheLoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thể loại: Kinh dị"
                    android:textStyle="italic"
                    android:textSize="21dp"/>
                <TextView
                    android:id="@+id/tvThoiLuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thời Lượng: 122 phút"
                    android:textSize="18dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:id="@+id/tvDoTuoi"
                        android:layout_width="25dp"
                        android:layout_height="23dp"
                        android:text="18+"
                        android:textColor="#FFFFFF"
                        android:background="@color/design_default_color_error"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phim được phổ biến đến người xem từ 18 tuổi trở lên"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- button yêu thích-->
                    <Button
                        android:id="@+id/btnThich"
                        android:layout_width="100dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/yeu_thich"
                        android:text="Thích"
                        android:textColor="@color/black"/>
                    <!-- button trailer-->
                    <Button
                        android:id="@+id/btnTrailer"
                        android:layout_width="100dp"
                        android:layout_height="68dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:backgroundTint="#FFFFFF"
                        android:drawableTop="@drawable/trailer"
                        android:text="Trailer"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTinhTrang"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Tình trạng: Đã chiếu"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#fc0313"/>
            <!-- button đặt vé-->
            <Button
                android:id="@+id/btnDatVe"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Đặt vé"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNDPhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung phim"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvND"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Câu chuyện phim là kịch bản kinh dị đẫm máu lấy cảm hứng từ truyện cỏ tích nổi tiếng Tấm Cám, nội dung xoay quanh Cám- em gái cùng cha khác mẹ của Tấm đồng thời sẽ có nhiều nhân vật và chi tiết sáng tạo, gợi cảm giác vừa lạ vừa quen cho khán giả."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đạo diễn và Diễn viên "
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/lam_thanh_my"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Lam Thanh My"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/thanh_vy"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Rima Thanh Vy"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ngo_hai_nam"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Ngô Hải Nam"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>