<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ThongTinPhimActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="bottom|end">
                <!-- nút quay trở lại-->
                <Button
                    android:id="@+id/btnThoat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:drawableTop="@drawable/back"
                    android:gravity="center"
                    android:backgroundTint="#d5dedb"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:id="@+id/tvThongTinPhim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin phim"
                        android:textSize="23dp"
                        android:padding="3dp"
                        android:layout_marginLeft="7dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d5dedb"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/imgPhim"
                    android:layout_width="150dp"
                    android:layout_height="210dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTenPhim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phim:"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tvTheLoai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thể loại:"
                        android:textStyle="italic"
                        android:textSize="21dp"/>
                    <TextView
                        android:id="@+id/tvThoiLuong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thời Lượng:"
                        android:textSize="18dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:id="@+id/tvDoTuoi"
                            android:layout_width="25dp"
                            android:layout_height="23dp"
                            android:text="18+"
                            android:textColor="#FFFFFF"
                            android:background="@color/design_default_color_error"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phim được phổ biến đến người xem từ 18 tuổi trở lên"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- button yêu thích-->
                        <Button
                            android:id="@+id/btnThich"
                            android:layout_width="100dp"
                            android:layout_height="68dp"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:backgroundTint="#FFFFFF"
                            android:drawableTop="@drawable/yeu_thich"
                            android:text="Thích"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTinhTrang"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Tình trạng:"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#fc0313"/>
                <!-- button đặt vé-->
                <Button
                    android:id="@+id/btnDatVe"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Đặt vé"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"/>
            </LinearLayout>
            <VideoView
                android:id="@+id/videoTrailer"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvNDPhim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nội dung phim"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvND"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trailer"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginBottom="5dp" />
                <WebView
                    android:id="@+id/webViewTrailer"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đạo diễn và Diễn viên "
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvActors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>