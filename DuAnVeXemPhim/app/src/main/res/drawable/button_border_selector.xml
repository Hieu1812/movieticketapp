<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Trạng thái khi ấn vào (pressed) -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- Màu nền khi ấn -->
                <stroke android:width="2dp" android:color="#FF0000" /> <!-- Màu đường viền khi ấn -->
                <corners android:radius="8dp" />
            </shape>
        </item>

        <!-- Trạng thái mặc định -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF" /> <!-- Màu nền mặc định -->
                <stroke android:width="2dp" android:color="#0000FF" /> <!-- Màu đường viền mặc định -->
                <corners android:radius="8dp" />
            </shape>
        </item>
    </shape>


</selector>